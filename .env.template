# Environment Configuration for LimeDB Docker Deployment
# Copy this file to .env and customize for your environment

# Database Configuration
DB_USERNAME=limedb
DB_PASSWORD=your_secure_password_here
DB_PORT=5432

# Node Ports (adjust if needed to avoid conflicts)
NODE1_PORT=7001
NODE2_PORT=7002
NODE3_PORT=7003
NODE4_PORT=7004
NODE5_PORT=7005

# Docker Image Configuration
LIMEDB_IMAGE=limedb:latest

# JVM Configuration (can be overridden per node)
JVM_MEMORY_OPTS=-Xms512m -Xmx1g -XX:MetaspaceSize=128m -XX:MaxMetaspaceSize=256m
JAVA_OPTS=-server -XX:+UseG1GC -XX:MaxGCPauseMillis=200 -XX:+UseStringDeduplication

# Monitoring (optional)
GRAFANA_PASSWORD=secure_grafana_password

# Production Settings
COMPOSE_PROJECT_NAME=limedb-cluster
RESTART_POLICY=unless-stopped

# Logging Configuration
LOG_LEVEL=INFO
LOG_MAX_SIZE=10m
LOG_MAX_FILES=3